<% layout("/layout/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br>
    <h3>Create a new Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div  class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input 
            name="listing[title]" 
            placeholder="Add a catchy title"
            type="text"
            class="form-control"
            required
            />
            <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Tilte should be valid</div>
        </div>
        <div  class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea 
               name="listing[description]" 
               type="text"
               class="form-control" required></textarea>
               <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Description should be valid</div>
        </div>
        <div  class="mb-3">
            <lable for="image" class="form-label">Image</lable>
            <input 
            name="listing[image]"
            placeholder="Enter image URL/Link"
            type="text"
            class="form-control"/>
        </div>
        <div class="row">
            <div  class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input 
                name="listing[price]" 
                placeholder="1200" 
                <% // type="number" %>
                class="form-control" required/>
                <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Price should be valid</div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input 
                name="listing[country]" 
                placeholder="India" 
                type="text" 
                class="form-control" required/>
                <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
         <div  class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input
             name="listing[location]" 
             placeholder="Indore, Madhya Pradesh" 
             type="text"
             class="form-control" required
             />
             <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        <br>
        <button class="btn btn-dark add-btn mt-3">Add the location</button>
        <br><br>
    </form>
</div>
</div>
</body>
