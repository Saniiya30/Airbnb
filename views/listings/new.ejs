<% layout("/layout/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br>
    <h3>Create a new Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div  class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input 
            name="listing[title]" 
            placeholder="Add a catchy title"
            type="text"
            class="form-control"
            required
            />
            <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Tilte should be valid</div>
        </div>
        <div  class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea 
               name="listing[description]" 
               type="text"
               class="form-control" required></textarea>
               <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Description should be valid</div>
        </div>

         
        <div class="mb-3">
            <lable for="image" class="form-label">Upload Listing Image</lable>
            <input 
            name="listing[image]"
     
            type="file"
            class="form-control" required/>
            <div class="invalid-feedback">Image should be uploaded</div>
        </div>
        <div class="row">
            <div  class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input 
                name="listing[price]" 
                placeholder="1200" 
                 type="number" 
                class="form-control" required/>
                <div class="valid-feedback">Looks good!!</div>
                <div class="invalid-feedback">Price should be valid</div>
            </div>

            <div class="mb-3 col-md-4">
                <lable for="country" class="form-label">Country</lable>
                <input 
                name="listing[country]" 
                placeholder="India" 
                type="text" 
                class="form-control" required/>
                <div class="valid-feedback">Looks good!!</div>
                <div class="invalid-feedback">Country name should be valid</div>
            </div>

            <div class="mb-3 col-md-4">
                <lable for="category" class="form-label">Category</lable>
                <select class="form-select" name="listing[category]" required>
                    <option selected >Choose...</option>
                    <option value="Mountains">Mountains</option>
                    <option value="Beach">Beach</option>
                    <option value="Boats">Boats</option>
                    <option value="Amazing pools">Amazing pools</option>
                    <option value="Iconic Cities">Iconic Cities</option>
                    <option value="Arctic">Arctic</option>
                    <option value="Camping">Camping</option>
                    <option value="Other">Other</option>
                </select>
                <div class="valid-feedback">Looks good!!</div>
                <div class="invalid-feedback">Please select a valid category</div>
            </div>
        </div>

          <div  class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input
             name="listing[location]" 
             placeholder="Indore, Madhya Pradesh" 
             type="text"
             class="form-control" required
             />
             <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        <br>
        <button class="btn btn-dark add-btn mt-1">Add the location</button>
        <br><br>
    </form>
</div>
</div>
</body>
